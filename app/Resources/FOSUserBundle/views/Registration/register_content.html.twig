{% block fos_user_content %}
    <br/>
    <div class="col-md-6 col-xs-12 center-margin">
        <div class="x_panel">
            <div class="x_title">
                <h2>Register with us</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br/>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                    {{ form_errors(form.first_name) }}
                    {{ form_widget(form.first_name, { 'attr': {'class': 'has-feedback-left', 'placeholder': 'First Name'} }) }}
                    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                    {{ form_errors(form.last_name) }}
                    {{ form_widget(form.last_name, { 'attr': {'class': 'form-control', 'placeholder': 'Last Name'} }) }}
                    <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email Address'} }) }}
                    <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                    {{ form_errors(form.mobile_number) }}
                    {{ form_widget(form.mobile_number, { 'attr': {'class': 'form-control', 'placeholder': 'Mobile Number'}}) }}
                    <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Register as</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_errors(form.user_type) }}
                        {{ form_widget(form.user_type, { 'attr': {'class': 'form-control', 'placeholder': 'User Type'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Post Code </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_errors(form.postcode) }}
                        {{ form_widget(form.postcode, { 'attr': {'class': 'form-control', 'placeholder': 'Post Code'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Country</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_errors(form.country) }}
                        {{ form_widget(form.country, { 'attr': {'class': 'form-control', 'placeholder': 'Country'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">User Name</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'User Name'} }) }}
                    </div>
                </div>
                {% for passwordField in form.plainPassword %}
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">PassWord</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            {{ form_errors(form.plainPassword) }}
                            {{ form_widget(passwordField, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
                        </div>
                    </div>
                {% endfor %}

            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                    <button class="btn btn-primary" type="reset">Reset</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock fos_user_content %}

