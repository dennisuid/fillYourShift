{% extends "@root/base.html.twig" %}

{% block body %}
        <div class="panel panel-primary">
            <div class="panel-heading ">
            <h3 class="panel-title">Subscribed Shifts</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                      <tr>
                      <th scope="col">ID</th>
                      <th scope="col">OrgName</th>
                      <th scope="col">RoleName</th>
                      <th scope="col">StartDate</th> 
                      <th scope="col">EndDate</th>
                      <th scope="col">Rate</th>
                      <th scope="col">CreatedBy</th>
                      <th scope="col">STATUS</th>
                    </tr>
                    {% for subscribedShift in subscribedShifts %}
                    
                    <tr>
                     <td> <a href="{{ url('viewShift', {'id': subscribedShift.getId() })}}">{{ subscribedShift.getID() }}</a> </td>
                     <td> {{subscribedShift.getOrgName()}} </td>
                     <td> {{subscribedShift.getRoleName()}} </td>
                     <td> {{subscribedShift.getStartDateHours()|date('Y-m-d H')}} </td>
                     <td> {{subscribedShift.getEndDateHours()|date('Y-m-d H')}} </td>
                     <td> {{subscribedShift.getShiftRate()}} </td>
                     <td> {{subscribedShift.getShiftCreatedBy()}} </td>
                     <td> {{subscribedShift.getShiftStatus()}} </td>
                     
                    </tr>
                    
                    {% endfor %}
                    
                </table>
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading ">
                <h3 class="panel-title ">Published Shifts</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped"> 
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">OrgName</th>
                      <th scope="col">RoleName</th>
                      <th scope="col">StartDate</th> 
                      <th scope="col">EndDate</th>
                      <th scope="col">Rate</th>
                      <th scope="col">CreatedBy</th>
                      <th scope="col">STATUS</th>
                    </tr>
                    
                 {% for forSubscriptionShift in forSubscriptionShifts %}
                    
                    <tr>
                     <td> <a href="{{ url('viewShift', {'id': forSubscriptionShift.getId() })}}">{{ forSubscriptionShift.getID() }}</a> </td>
                     <td> {{forSubscriptionShift.getOrgName()}} </td>
                     <td> {{forSubscriptionShift.getRoleName()}} </td>
                     <td> {{forSubscriptionShift.getStartDateHours()|date('Y-m-d H')}} </td>
                     <td> {{forSubscriptionShift.getEndDateHours()|date('Y-m-d H')}} </td>
                     <td> {{forSubscriptionShift.getShiftRate()}} </td>
                     <td> {{forSubscriptionShift.getShiftCreatedBy()}} </td>
                     <td> {{forSubscriptionShift.getShiftStatus()}} </td>
                     
                    </tr>
                    
                {% endfor %}
                    
                </table>
            </div>
        </div>
            
        <div class="panel panel-success">
            <div class="panel-heading ">
                <h3 class="panel-title">Assigned Shifts</h3>
            </div>
            <div class="panel-body">
               <table class="table table-striped table-responsive">
                    <thead class="thead-dark">
                      <tr>
                      <th scope="col">ID</th>
                      <th scope="col">OrgName</th>
                      <th scope="col">RoleName</th>
                      <th scope="col">StartDate</th> 
                      <th scope="col">EndDate</th>
                      <th scope="col">Rate</th>
                      <th scope="col">CreatedBy</th>
                      <th scope="col">STATUS</th>
                    </tr>
                    </thead>
                    <tbody>
                {% for assignedShift in assignedShifts %}
                 <tr>
                     <td> <a href="{{ url('employeeViewShift', {'id': assignedShift.getId() })}}">{{ assignedShift.getID() }}</a> </td>
                     <td> {{assignedShift.getOrgName()}} </td>
                     <td> {{assignedShift.getRoleName()}} </td>
