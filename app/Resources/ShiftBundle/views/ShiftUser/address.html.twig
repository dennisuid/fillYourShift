{% block body %}
    <h2 class="StepTitle">Step 2: Location Details </h2>
    <form class="form-horizontal form-label-left">
        <span class="section">Location</span>
        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3">House Number</label>
            <div class="col-md-6 col-sm-6">
                <input id="middle-name2" class="form-control col-md-7 col-xs-12" type="text"
                       name="middle-name" value="{{ app.user.houseNumber }}">
            </div>
        </div>
        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3">Address Line1</label>
            <div class="col-md-6 col-sm-6">
                <input id="middle-name2" class="form-control col-md-7 col-xs-12" type="text"
                       name="middle-name" value="{{ app.user.addressLine1 }}">
            </div>
        </div>
        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3">Address Line2</label>
            <div class="col-md-6 col-sm-6">
                <input id="middle-name2" class="form-control col-md-7 col-xs-12" type="text"
                       name="middle-name" value="{{ app.user.addressLine2 }}">
            </div>
        </div>
        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3">Post Code</label>
            <div class="col-md-6 col-sm-6">
                <input id="middle-name2" class="form-control col-md-7 col-xs-12" type="text"
                       name="middle-name" value="{{ app.user.postCode }}">
            </div>
        </div>
        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3">Country</label>
            <div class="col-md-6 col-sm-6">
                <input id="middle-name2" class="form-control col-md-7 col-xs-12" type="text"
                       name="middle-name" value="{{ app.user.country }}">
            </div>
        </div>
    </form>
{% endblock %}